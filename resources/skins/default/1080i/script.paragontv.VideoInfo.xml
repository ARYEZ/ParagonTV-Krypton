<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>7000</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <!-- Semi-transparent background -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="99000000">black.png</texture>
        </control>

        <!-- Main dialog container - centered -->
        <control type="group">
            <posx>510</posx>
            <posy>240</posy>
            <animation effect="zoom" start="90" end="100" time="200" tween="cubic">WindowOpen</animation>
            <animation effect="fade" start="0" end="100" time="200">WindowOpen</animation>
            <animation effect="zoom" start="100" end="90" time="200" tween="cubic">WindowClose</animation>
            <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>

            <!-- Dialog background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>900</width>
                <height>600</height>
                <texture colordiffuse="ee1a1a1a">ContentPanel.png</texture>
            </control>

            <!-- Title bar -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>900</width>
                <height>70</height>
                <texture colordiffuse="ff2d2d2d">ContentPanel.png</texture>
            </control>

            <!-- Title -->
            <control type="label">
                <posx>30</posx>
                <posy>15</posy>
                <width>840</width>
                <height>40</height>
                <font>fontsize_38</font>
                <textcolor>ffffffff</textcolor>
                <label>Video Information</label>
            </control>

            <!-- Content area -->
            <control type="group">
                <posx>40</posx>
                <posy>90</posy>

                <!-- Row 1: Video Resolution -->
                <control type="group">
                    <posx>0</posx>
                    <posy>0</posy>

                    <control type="label">
                        <posx>0</posx>
                        <posy>12</posy>
                        <width>200</width>
                        <height>40</height>
                        <font>fontsize_28</font>
                        <textcolor>ff888888</textcolor>
                        <label>Resolution</label>
                    </control>

                    <control type="image" id="7101">
                        <posx>200</posx>
                        <posy>0</posy>
                        <width>160</width>
                        <height>60</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Window.Property(VideoInfo.Resolution.Icon)]</texture>
                        <visible>!IsEmpty(Window.Property(VideoInfo.Resolution.Icon))</visible>
                    </control>

                    <!-- Fallback text if no icon -->
                    <control type="label" id="7102">
                        <posx>200</posx>
                        <posy>12</posy>
                        <width>200</width>
                        <height>40</height>
                        <font>fontsize_28</font>
                        <textcolor>ffffffff</textcolor>
                        <label>$INFO[Window.Property(VideoInfo.Resolution.Text)]</label>
                        <visible>IsEmpty(Window.Property(VideoInfo.Resolution.Icon))</visible>
                    </control>

                    <!-- Dimensions text -->
                    <control type="label">
                        <posx>380</posx>
                        <posy>12</posy>
                        <width>400</width>
                        <height>40</height>
                        <font>fontsize_24</font>
                        <textcolor>ff888888</textcolor>
                        <label>$INFO[Window.Property(VideoInfo.Dimensions)]</label>
                    </control>
                </control>

                <!-- Row 2: Video Codec -->
                <control type="group">
                    <posx>0</posx>
                    <posy>75</posy>

                    <control type="label">
                        <posx>0</posx>
                        <posy>12</posy>
                        <width>200</width>
                        <height>40</height>
                        <font>fontsize_28</font>
                        <textcolor>ff888888</textcolor>
                        <label>Video Codec</label>
                    </control>

                    <control type="image" id="7201">
                        <posx>200</posx>
                        <posy>0</posy>
                        <width>160</width>
                        <height>60</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Window.Property(VideoInfo.VideoCodec.Icon)]</texture>
                        <visible>!IsEmpty(Window.Property(VideoInfo.VideoCodec.Icon))</visible>
                    </control>

                    <!-- Fallback text if no icon -->
                    <control type="label" id="7202">
                        <posx>200</posx>
                        <posy>12</posy>
                        <width>300</width>
                        <height>40</height>
                        <font>fontsize_28</font>
                        <textcolor>ffffffff</textcolor>
                        <label>$INFO[Window.Property(VideoInfo.VideoCodec.Text)]</label>
                        <visible>IsEmpty(Window.Property(VideoInfo.VideoCodec.Icon))</visible>
                    </control>

                    <!-- Bitrate/FPS info -->
                    <control type="label">
                        <posx>380</posx>
                        <posy>12</posy>
                        <width>400</width>
                        <height>40</height>
                        <font>fontsize_24</font>
                        <textcolor>ff888888</textcolor>
                        <label>$INFO[Window.Property(VideoInfo.VideoDetails)]</label>
                    </control>
                </control>

                <!-- Row 3: Audio Codec -->
                <control type="group">
                    <posx>0</posx>
                    <posy>150</posy>

                    <control type="label">
                        <posx>0</posx>
                        <posy>12</posy>
                        <width>200</width>
                        <height>40</height>
                        <font>fontsize_28</font>
                        <textcolor>ff888888</textcolor>
                        <label>Audio Codec</label>
                    </control>

                    <control type="image" id="7301">
                        <posx>200</posx>
                        <posy>0</posy>
                        <width>160</width>
                        <height>60</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Window.Property(VideoInfo.AudioCodec.Icon)]</texture>
                        <visible>!IsEmpty(Window.Property(VideoInfo.AudioCodec.Icon))</visible>
                    </control>

                    <!-- Fallback text if no icon -->
                    <control type="label" id="7302">
                        <posx>200</posx>
                        <posy>12</posy>
                        <width>300</width>
                        <height>40</height>
                        <font>fontsize_28</font>
                        <textcolor>ffffffff</textcolor>
                        <label>$INFO[Window.Property(VideoInfo.AudioCodec.Text)]</label>
                        <visible>IsEmpty(Window.Property(VideoInfo.AudioCodec.Icon))</visible>
                    </control>

                    <!-- Audio bitrate info -->
                    <control type="label">
                        <posx>380</posx>
                        <posy>12</posy>
                        <width>400</width>
                        <height>40</height>
                        <font>fontsize_24</font>
                        <textcolor>ff888888</textcolor>
                        <label>$INFO[Window.Property(VideoInfo.AudioDetails)]</label>
                    </control>
                </control>

                <!-- Row 4: Audio Channels -->
                <control type="group">
                    <posx>0</posx>
                    <posy>225</posy>

                    <control type="label">
                        <posx>0</posx>
                        <posy>12</posy>
                        <width>200</width>
                        <height>40</height>
                        <font>fontsize_28</font>
                        <textcolor>ff888888</textcolor>
                        <label>Channels</label>
                    </control>

                    <control type="image" id="7401">
                        <posx>200</posx>
                        <posy>0</posy>
                        <width>160</width>
                        <height>60</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Window.Property(VideoInfo.AudioChannels.Icon)]</texture>
                        <visible>!IsEmpty(Window.Property(VideoInfo.AudioChannels.Icon))</visible>
                    </control>

                    <!-- Fallback text if no icon -->
                    <control type="label" id="7402">
                        <posx>200</posx>
                        <posy>12</posy>
                        <width>300</width>
                        <height>40</height>
                        <font>fontsize_28</font>
                        <textcolor>ffffffff</textcolor>
                        <label>$INFO[Window.Property(VideoInfo.AudioChannels.Text)]</label>
                        <visible>IsEmpty(Window.Property(VideoInfo.AudioChannels.Icon))</visible>
                    </control>

                    <!-- Channel layout info -->
                    <control type="label">
                        <posx>380</posx>
                        <posy>12</posy>
                        <width>400</width>
                        <height>40</height>
                        <font>fontsize_24</font>
                        <textcolor>ff888888</textcolor>
                        <label>$INFO[Window.Property(VideoInfo.ChannelLayout)]</label>
                    </control>
                </control>

                <!-- Separator line -->
                <control type="image">
                    <posx>0</posx>
                    <posy>310</posy>
                    <width>820</width>
                    <height>2</height>
                    <texture colordiffuse="ff444444">ContentPanel.png</texture>
                </control>

                <!-- Row 5: File info -->
                <control type="group">
                    <posx>0</posx>
                    <posy>330</posy>

                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>200</width>
                        <height>35</height>
                        <font>fontsize_24</font>
                        <textcolor>ff888888</textcolor>
                        <label>Filename</label>
                    </control>

                    <control type="label">
                        <posx>0</posx>
                        <posy>35</posy>
                        <width>820</width>
                        <height>35</height>
                        <font>fontsize_24</font>
                        <textcolor>ffffffff</textcolor>
                        <scroll>true</scroll>
                        <label>$INFO[Window.Property(VideoInfo.Filename)]</label>
                    </control>
                </control>

                <!-- Row 6: Duration & Aspect Ratio -->
                <control type="group">
                    <posx>0</posx>
                    <posy>410</posy>

                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>120</width>
                        <height>35</height>
                        <font>fontsize_24</font>
                        <textcolor>ff888888</textcolor>
                        <label>Duration</label>
                    </control>

                    <control type="label">
                        <posx>120</posx>
                        <posy>0</posy>
                        <width>150</width>
                        <height>35</height>
                        <font>fontsize_24</font>
                        <textcolor>ffffffff</textcolor>
                        <label>$INFO[Window.Property(VideoInfo.Duration)]</label>
                    </control>

                    <control type="label">
                        <posx>300</posx>
                        <posy>0</posy>
                        <width>140</width>
                        <height>35</height>
                        <font>fontsize_24</font>
                        <textcolor>ff888888</textcolor>
                        <label>Aspect Ratio</label>
                    </control>

                    <control type="label">
                        <posx>450</posx>
                        <posy>0</posy>
                        <width>150</width>
                        <height>35</height>
                        <font>fontsize_24</font>
                        <textcolor>ffffffff</textcolor>
                        <label>$INFO[Window.Property(VideoInfo.AspectRatio)]</label>
                    </control>
                </control>
            </control>

            <!-- Close button (invisible, for focus) -->
            <control type="button" id="7000">
                <posx>0</posx>
                <posy>0</posy>
                <width>900</width>
                <height>600</height>
                <texturefocus>-</texturefocus>
                <texturenofocus>-</texturenofocus>
            </control>
        </control>
    </controls>
</window>
